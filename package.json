  "scripts": {
    "prepare": "husky install || true",
    "clean": "rimraf artifacts cache coverage typechain-types",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "lint": "eslint . --ext .ts --max-warnings 0",
