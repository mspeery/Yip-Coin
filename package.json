    "@types/node": "^20.12.12",
    "chai": "^4.4.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "hardhat": "^2.22.6",
    "hardhat-gas-reporter": "^1.0.10",
    "husky": "^9.1.6",
    "mocha": "^10.4.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "solidity-coverage": "^0.8.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
